# TGD Memory - Production Environment Configuration

# Server configuration
NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database configuration
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/tgdmemory?authSource=admin

# Authentication
JWT_SECRET=your-secure-jwt-secret-key-should-be-long-and-complex
JWT_EXPIRY=7d

# API Keys
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-pro

# Cache configuration
CACHE_ENABLED=true
CACHE_EXPIRY=2592000 # 30 days in seconds

# Logging
LOG_LEVEL=error

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # Maximum of 100 requests per window

# Security settings
BCRYPT_SALT_ROUNDS=12
